	<label class="col-sm-2 col-form-label">{{ entry_button_text_color }}</label>
	<div class="col-sm-10">
		<input type="color"
			   name="button_text_color"
			   value="{{ button_text_color }}"
			   class="form-control form-control-color">
	</div>
</div>

<div class="row mb-3">
	<label class="col-sm-2 col-form-label">{{ entry_button_text_color_hover }}</label>
	<div class="col-sm-10">
		<input type="color"
			   name="button_text_color_hover"
