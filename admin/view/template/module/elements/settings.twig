<div class="row mb-3">
	<label class="col-sm-2 col-form-label">{{ entry_button_bg }}</label>
	<div class="col-sm-10">
		<input type="color"
			   name="button_bg"
			   value="{{ button_bg }}"
			   class="form-control form-control-color">
	</div>
</div>

<div class="row mb-3">
	<label class="col-sm-2 col-form-label">{{ entry_button_bg_hover }}</label>
	<div class="col-sm-10">
		<input type="color"
			   name="button_bg_hover"
			   value="{{ button_bg_hover }}"
			   class="form-control form-control-color">
	</div>
</div>

